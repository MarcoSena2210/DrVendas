@model IEnumerable<DrVendasWebMVC.Models.Vendedor>

    @{
    ViewData["Title"] = "Vendedor";
    }

    <h2>@ViewData["Title"]</h2

    <<p>    
    <a asp-action="Create" class="btn-default" >Novo Vendedor</a>
    </p>

    <table class="table  table-striped table-hover">
        <thead>
            <tr class="success">
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataAniversario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SalarioBase)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataAniversario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalarioBase)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhar</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
}
        </tbody>

    </table>